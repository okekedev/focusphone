# Production config for Azure Container Apps

# SQLite on mounted Azure Files
DATABASE_URL=sqlite+aiosqlite:////data/focusphone.db

# Microsoft Entra ID
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id

# MDM Server (update after deploying)
MDM_SERVER_URL=https://focusphone-api.azurecontainerapps.io
MDM_ORG_NAME=FocusPhone
MDM_ORG_IDENTIFIER=com.focusphone
MDM_TOPIC=com.apple.mgmt.External.your-topic

# Apple Push Notifications (configure later)
APNS_KEY_ID=
APNS_TEAM_ID=
APNS_KEY_PATH=/data/certs/AuthKey.p8
APNS_PRODUCTION=true
